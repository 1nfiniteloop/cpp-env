// Ref: https://code.visualstudio.com/docs/remote/containers#_devcontainerjson-reference
{
	"name": "cpp-env",
	"dockerFile": "Dockerfile",
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools",
		"twxs.cmake"
	],
	"runArgs": [
		"--name=cpp-env.vscode",
		"--volume=vscode.cache:/home/build",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	]
}
